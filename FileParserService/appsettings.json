{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "RabbitMq": {
    //"HostName": "rabbitmq://192.168.100.5:5672/demand", //localhost: 192.168.100.5; name of the queue: demand
    "HostName": "localhost", //localhost: 192.168.100.5; name of the queue: demand
    "VirtualHost": "demand",
    "Port": 5672,
    "UserName": "admin",
    "Password": "admin",
    "QueueName": "test_ttl_xml_processing_queue",

    "XDeadLetterExchange": "retry.exchange",
    "XDeadLetterRoutingKey": "retry.key",

